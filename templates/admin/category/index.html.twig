{% extends 'admin/base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<h1>Category index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom de la catégorie</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					<td>
						<a class="btn btn-primary btn-sm" href="{{ path('admin_category_edit', {'slug': category.slug}) }}">Editer</a>
					</td>
					<td>
						<a class="btn btn-danger btn-sm" href="{{ path('admin_category_delete', {'slug': category.slug}) }}">Supprimer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-info" href="{{ path('admin_category_new') }}">Créer une nouvelle catégorie</a>
{% endblock %}
