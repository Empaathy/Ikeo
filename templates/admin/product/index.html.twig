{% extends 'admin/base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Price</th>
				<th>Slug</th>
				<th>Poster</th>
				<th>Short_desc</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.slug }}</td>
					<td>{{ product.poster }}</td>
					<td>{{ product.shortDesc }}</td>
					<td>
						<a href="{{ path('admin_product_edit', {'slug': product.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_product_new') }}">Create new</a>
{% endblock %}
