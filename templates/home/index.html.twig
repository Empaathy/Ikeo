{% extends 'base.html.twig' %}

{% block title %}Ikeo! Sortez avec un Suédois
{% endblock %}

{% block body %}
	<h1>Nos produits phares
	</h1>
	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">
					<img src="{{ p.poster }}" class="img-fluid" alt="">
					<div class="card-body">
						<h4 class="card-title">{{ p.name }}
							({{ p.price }}
							&euro;)</h4>

						<span class="badge badge-info">
							{{ p.category.name }}</span>

						<p class="card-text">{{ p.shortDesc }}</p>
						<a href="{{ path('product_show', {category_slug: p.category.slug, slug: p.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter au panier</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irréporochable!</h2>
	<p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quod, saepe!</p>
	<div class="row">
		{% include "components/_assurance.html.twig" with {
            'color': 'primary',
            'icon': 'fas fa-truck',
            'text': 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Officiis, voluptate.'
        } %}
		{% include "components/_assurance.html.twig" with {
            'color': 'success',
            'icon': 'fas fa-check',
            'text': 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Officiis, voluptate.'
        } %}
		{% include "components/_assurance.html.twig" with {
            'color': 'warning',
            'icon': 'fas fa-lock',
            'text': 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Officiis, voluptate.'
        } %}
	</div>
{% endblock %}
